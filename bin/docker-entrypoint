#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Determine what to run based on RENDER_SERVICE_TYPE environment variable
if [ "$RENDER_SERVICE_TYPE" = "worker" ]; then
    echo "Starting Solid Queue worker..."
    exec ./bin/jobs
elif [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
    # If running the rails server then create or migrate existing database
    ./bin/rails db:prepare
    exec "${@}"
else
    # Default: start the web server
    ./bin/rails db:prepare
    exec ./bin/thrust ./bin/rails server
fi
