<div class="bg-gradient-to-r from-purple-50 to-indigo-50 shadow-lg rounded-lg overflow-hidden mb-8">
  <div class="px-6 py-4 bg-gradient-to-r from-purple-600 to-indigo-600">
    <h3 class="text-lg font-semibold text-white flex items-center gap-2">
      🤖 AI Survey Insights
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-white bg-opacity-20 text-white">
        <% case insights["urgency_level"] %>
        <% when "high" %>
          🔴 High Priority
        <% when "medium" %>
          🟡 Medium Priority
        <% else %>
          🟢 Low Priority
        <% end %>
      </span>
    </h3>
  </div>

  <div class="p-6 space-y-6">
    <!-- Executive Summary -->
    <div class="bg-white rounded-lg p-4 border-l-4 border-indigo-500">
      <h4 class="text-lg font-medium text-gray-900 mb-2">📋 Executive Summary</h4>
      <p class="text-gray-700 leading-relaxed"><%= insights["executive_summary"] %></p>
    </div>

    <!-- Key Findings -->
    <div class="bg-white rounded-lg p-4">
      <h4 class="text-lg font-medium text-gray-900 mb-3 flex items-center gap-2">
        🔍 Key Findings
      </h4>
      <ul class="space-y-2">
        <% insights["key_findings"].each do |finding| %>
          <li class="flex items-start gap-2">
            <svg class="h-5 w-5 text-indigo-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-700"><%= finding %></span>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Response Rate Assessment -->
    <% if insights["response_rate_assessment"] %>
      <div class="bg-white rounded-lg p-4 border-l-4 border-blue-500">
        <h4 class="text-lg font-medium text-gray-900 mb-2">📊 Response Rate Analysis</h4>
        <p class="text-gray-700"><%= insights["response_rate_assessment"] %></p>
      </div>
    <% end %>

    <!-- Grid Layout for Categories -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Satisfaction Drivers -->
      <div class="bg-green-50 rounded-lg p-4 border border-green-200">
        <h4 class="text-lg font-medium text-green-800 mb-3 flex items-center gap-2">
          ✅ What's Working Well
        </h4>
        <% if insights["satisfaction_drivers"]&.any? %>
          <ul class="space-y-2">
            <% insights["satisfaction_drivers"].each do |driver| %>
              <li class="flex items-start gap-2">
                <div class="h-2 w-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
                <span class="text-green-700 text-sm"><%= driver %></span>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-green-600 text-sm italic">No specific strengths identified in current data.</p>
        <% end %>
      </div>

      <!-- Areas for Improvement -->
      <div class="bg-yellow-50 rounded-lg p-4 border border-yellow-200">
        <h4 class="text-lg font-medium text-yellow-800 mb-3 flex items-center gap-2">
          ⚠️ Areas for Improvement
        </h4>
        <% if insights["areas_for_improvement"]&.any? %>
          <ul class="space-y-2">
            <% insights["areas_for_improvement"].each do |area| %>
              <li class="flex items-start gap-2">
                <div class="h-2 w-2 bg-yellow-500 rounded-full mt-2 flex-shrink-0"></div>
                <span class="text-yellow-700 text-sm"><%= area %></span>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-yellow-600 text-sm italic">No specific improvement areas identified.</p>
        <% end %>
      </div>
    </div>

    <!-- Risk Indicators -->
    <% if insights["risk_indicators"]&.any? %>
      <div class="bg-red-50 rounded-lg p-4 border border-red-200">
        <h4 class="text-lg font-medium text-red-800 mb-3 flex items-center gap-2">
          🚨 Risk Indicators
        </h4>
        <ul class="space-y-2">
          <% insights["risk_indicators"].each do |risk| %>
            <li class="flex items-start gap-2">
              <svg class="h-5 w-5 text-red-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
              <span class="text-red-700 text-sm"><%= risk %></span>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Recommended Actions -->
    <div class="bg-indigo-50 rounded-lg p-4 border border-indigo-200">
      <h4 class="text-lg font-medium text-indigo-800 mb-3 flex items-center gap-2">
        🎯 Recommended Actions
      </h4>
      <% if insights["recommended_actions"]&.any? %>
        <ol class="space-y-3">
          <% insights["recommended_actions"].each_with_index do |action, index| %>
            <li class="flex items-start gap-3">
              <span class="flex-shrink-0 h-6 w-6 bg-indigo-500 text-white text-xs font-bold rounded-full flex items-center justify-center">
                <%= index + 1 %>
              </span>
              <span class="text-indigo-700 text-sm"><%= action %></span>
            </li>
          <% end %>
        </ol>
      <% else %>
        <p class="text-indigo-600 text-sm italic">Continue current practices and monitor results.</p>
      <% end %>
    </div>

    <!-- Department Insights -->
    <% if insights["department_insights"]&.any? %>
      <div class="bg-white rounded-lg p-4 border border-gray-200">
        <h4 class="text-lg font-medium text-gray-900 mb-3 flex items-center gap-2">
          🏢 Department Insights
        </h4>
        <div class="grid grid-cols-1 gap-3">
          <% insights["department_insights"].each do |department, insight| %>
            <div class="flex items-start justify-between p-3 bg-gray-50 rounded-md">
              <div>
                <span class="font-medium text-gray-800"><%= department.titleize %></span>
                <p class="text-sm text-gray-600 mt-1"><%= insight %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Completion Time Assessment -->
    <% if insights["completion_time_assessment"] %>
      <div class="bg-white rounded-lg p-4 border-l-4 border-orange-500">
        <h4 class="text-lg font-medium text-gray-900 mb-2">⏱️ Survey Length Assessment</h4>
        <p class="text-gray-700"><%= insights["completion_time_assessment"] %></p>
      </div>
    <% end %>

    <!-- Action Buttons -->
    <div class="flex justify-between items-center pt-4 border-t border-gray-200">
      <div class="text-xs text-gray-500">
        Analysis generated <%= Time.current.strftime("%B %d, %Y at %I:%M %p") %>
      </div>
      <div class="flex gap-2">
        <button class="text-sm text-indigo-600 hover:text-indigo-500 font-medium">
          📄 Export Report
        </button>
        <button class="text-sm text-indigo-600 hover:text-indigo-500 font-medium"
                onclick="window.location.reload()">
          🔄 Regenerate Analysis
        </button>
      </div>
    </div>
  </div>
</div>