<div class="max-w-7xl mx-auto">
  <!-- Header Section -->
  <div class="mb-8 flex justify-between items-start">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">AI Insights History</h1>
      <p class="mt-2 text-sm text-gray-600">Survey: <%= @survey.title %></p>
      <div class="mt-2 flex items-center gap-4">
        <span class="text-sm text-gray-500">
          <%= pluralize(@insights.count, 'analysis') %> generated
        </span>
      </div>
    </div>
    <div class="flex gap-2">
      <%= link_to "← Back to Dashboard", dashboard_survey_path(@survey), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    </div>
  </div>

  <!-- Current/Latest Insights -->
  <% if @latest_insight %>
    <div class="mb-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Latest Analysis</h2>
      <%= render partial: "surveys/ai_insights", locals: { insights: @latest_insight.insights_data, survey: @survey } %>
    </div>
  <% end %>

  <!-- Insights History -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Analysis History</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">Past AI analyses for this survey</p>
    </div>

    <div class="border-t border-gray-200">
      <% if @insights.any? %>
        <ul class="divide-y divide-gray-200">
          <% @insights.each_with_index do |insight, index| %>
            <li class="px-6 py-4">
              <div class="flex items-center justify-between">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center space-x-3">
                    <div class="flex-shrink-0">
                      <% if index == 0 %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          Latest
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                          Archive
                        </span>
                      <% end %>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate">
                        Analysis #<%= @insights.count - index %>
                      </p>
                      <p class="text-sm text-gray-500">
                        Generated <%= time_ago_in_words(insight.generated_at) %> ago
                        by <%= insight.generated_by.display_name %>
                      </p>
                      <% if insight.summary.present? %>
                        <p class="text-sm text-gray-600 mt-1">
                          <%= insight.summary %>
                        </p>
                      <% end %>
                    </div>
                  </div>
                </div>

                <div class="flex items-center space-x-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%=
                    case insight.urgency_level
                    when 'high' then 'bg-red-100 text-red-800'
                    when 'medium' then 'bg-yellow-100 text-yellow-800'
                    else 'bg-green-100 text-green-800'
                    end %>">
                    <%= insight.urgency_level.titleize %> Priority
                  </span>

                  <%= link_to survey_insight_path(insight),
                      class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
                    View Details
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="px-6 py-8 text-center">
          <p class="text-gray-500">No AI insights generated yet.</p>
          <%= link_to "Generate First Analysis", dashboard_survey_path(@survey),
              class: "mt-2 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>