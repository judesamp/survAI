<div class="max-w-7xl mx-auto">
  <!-- Header Section -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">All AI Insights</h1>
    <p class="mt-2 text-sm text-gray-600">View all AI analyses across surveys</p>
  </div>

  <!-- Insights List -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Recent AI Analyses</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">All generated insights ordered by recency</p>
    </div>

    <div class="border-t border-gray-200">
      <% if @survey_insights.any? %>
        <ul class="divide-y divide-gray-200">
          <% @survey_insights.each do |insight| %>
            <li class="px-6 py-4">
              <div class="flex items-center justify-between">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center space-x-3">
                    <div class="flex-shrink-0">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%=
                        case insight.urgency_level
                        when 'high' then 'bg-red-100 text-red-800'
                        when 'medium' then 'bg-yellow-100 text-yellow-800'
                        else 'bg-green-100 text-green-800'
                        end %>">
                        <%= insight.urgency_level.titleize %>
                      </span>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900">
                        <%= link_to insight.survey.title, survey_path(insight.survey), class: "hover:text-indigo-600" %>
                      </p>
                      <p class="text-sm text-gray-500">
                        Generated <%= time_ago_in_words(insight.generated_at) %> ago
                        by <%= insight.generated_by.display_name %>
                      </p>
                      <% if insight.summary.present? %>
                        <p class="text-sm text-gray-600 mt-1">
                          <%= insight.summary %>
                        </p>
                      <% end %>
                    </div>
                  </div>
                </div>

                <div class="flex items-center space-x-2">
                  <%= link_to dashboard_survey_path(insight.survey),
                      class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
                    Dashboard
                  <% end %>

                  <%= link_to survey_insight_path(insight),
                      class: "inline-flex items-center px-3 py-2 border border-indigo-300 shadow-sm text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-50 hover:bg-indigo-100" do %>
                    View Insights
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="px-6 py-8 text-center">
          <p class="text-gray-500">No AI insights generated yet.</p>
          <%= link_to "View Surveys", surveys_path,
              class: "mt-2 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>