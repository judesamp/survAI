<div class="max-w-7xl mx-auto">
  <!-- Header Section -->
  <div class="mb-8 flex justify-between items-start">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">AI Analysis Details</h1>
      <p class="mt-2 text-sm text-gray-600">
        Survey: <%= link_to @survey.title, @survey, class: "text-indigo-600 hover:text-indigo-500" %>
      </p>
      <div class="mt-2 flex items-center gap-4">
        <span class="text-sm text-gray-500">
          Generated <%= time_ago_in_words(@survey_insight.generated_at) %> ago
          by <%= @survey_insight.generated_by.display_name %>
        </span>
        <span class="text-sm text-gray-500">
          Version <%= @survey_insight.analysis_version %>
        </span>
      </div>
    </div>
    <div class="flex gap-2">
      <%= link_to "â† Back to Survey", @survey, class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <%= link_to "View Dashboard", dashboard_survey_path(@survey), class: "inline-flex items-center px-3 py-2 border border-indigo-300 shadow-sm text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-50 hover:bg-indigo-100" %>
    </div>
  </div>

  <!-- AI Insights Display -->
  <%= render partial: "surveys/ai_insights", locals: { insights: @survey_insight.insights_data, survey: @survey } %>

  <!-- Metadata Section -->
  <div class="mt-8 bg-gray-50 rounded-lg p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Analysis Metadata</h3>
    <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
      <div>
        <dt class="text-sm font-medium text-gray-500">Generated At</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @survey_insight.generated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Generated By</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @survey_insight.generated_by.display_name %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Analysis Version</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @survey_insight.analysis_version %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Urgency Level</dt>
        <dd class="mt-1">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%=
            case @survey_insight.urgency_level
            when 'high' then 'bg-red-100 text-red-800'
            when 'medium' then 'bg-yellow-100 text-yellow-800'
            else 'bg-green-100 text-green-800'
            end %>">
            <%= @survey_insight.urgency_level.titleize %> Priority
          </span>
        </dd>
      </div>
    </dl>
  </div>

  <!-- Other Survey Insights -->
  <% other_insights = @survey.survey_insights.where.not(id: @survey_insight.id).recent_first.limit(5) %>
  <% if other_insights.any? %>
    <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Other Analyses for This Survey</h3>
      </div>
      <div class="border-t border-gray-200">
        <ul class="divide-y divide-gray-200">
          <% other_insights.each do |insight| %>
            <li class="px-6 py-4">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-900">
                    <%= time_ago_in_words(insight.generated_at) %> ago
                  </p>
                  <p class="text-sm text-gray-500">
                    by <%= insight.generated_by.display_name %>
                  </p>
                </div>
                <%= link_to "View", survey_insight_path(insight),
                    class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>